modules = ["go-1.21", "nodejs-20", "python-3.11"]
[agent]
expertMode = true
integrations = ["python_openai:1.0.0", "python_anthropic:1.0.0", "python_database:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["buf", "openssh_gssapi"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Block Explorer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Circle API Backend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev -- --host 0.0.0.0 --port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Block Explorer"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd dexplorer && npm run dev -- --host 0.0.0.0 --port 3001"
waitForPort = 3001

[[workflows.workflow]]
name = "Circle API Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && PORT=3002 npm run dev"
waitForPort = 3002

[[workflows.workflow]]
name = "Build & Deploy"
author = 48926778
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd aequitas && go mod tidy && go build -o ../repar-node ./cmd/aequitasd"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ../backend && npm install --prefer-offline --no-audit"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ../frontend && npm install --prefer-offline --no-audit && npm run dev -- --host 0.0.0.0 --port 5000"

